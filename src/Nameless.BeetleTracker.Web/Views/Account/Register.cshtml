@model RegisterViewModel
@{
    Layout = "~/Views/Shared/_CleanLayout.cshtml";
    ViewBag.Title = T("Register");
    ViewBag.BodyClass = "register-page";
}
@section scripts {
    <script type="text/javascript">
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        });
    </script>
}
<div class="register-box">
    <div class="register-logo">
        <a href="@Url.Action("Index", "Home")"><b>Web</b>Application</a>
    </div>
    <div class="register-box-body">
        <p class="login-box-msg">@T("Register a new membership")</p>

        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" })) {
            @Html.AntiForgeryToken()
            <div class="form-group has-feedback">
                @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", placeholder = T("Full name") })
                @Html.ValidationMessageFor(m => m.FullName, string.Empty, new { @class = "text-danger" })
                <span class="glyphicon glyphicon-user form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = T("Email"), role = "email" })
                @Html.ValidationMessageFor(m => m.Email, string.Empty, new { @class = "text-danger" })
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = T("Password") })
                @Html.ValidationMessageFor(m => m.Password, string.Empty, new { @class = "text-danger" })
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = T("Retype password") })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, string.Empty, new { @class = "text-danger" })
                <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
            </div>
            <div class="row">
                <div class="col-xs-8">
                    <div class="checkbox icheck">
                        <label>
                            @Html.CheckBoxFor(m => m.TermsAgreement) @T("I agree to the") <a href="#">@T("terms")</a>
                        </label>
                    </div>
                </div><!-- /.col -->
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">@T("Register")</button>
                </div><!-- /.col -->
            </div>
        }

        <div class="social-auth-links text-center">
            <p>- @T("OR") -</p>
            <a href="#" class="btn btn-block btn-social btn-facebook btn-flat"><i class="fa fa-facebook"></i> @T("Sign up using Facebook")</a>
            <a href="#" class="btn btn-block btn-social btn-google btn-flat"><i class="fa fa-google-plus"></i> @T("Sign up using Google+")</a>
        </div>
        <a href="@Url.Action("Login", "Account")" class="text-center">@T("I already have a membership")</a>
    </div><!-- /.form-box -->
</div><!-- /.register-box -->